<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/appointment_image"
            android:layout_toEndOf="@+id/appointment_image"
            android:layout_toRightOf="@+id/appointment_image"
            android:layout_marginStart="8dp"
            android:text="25/05/2020"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_view_top_left_item"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appointment_date"
            android:layout_alignBottom="@+id/appointment_image"
            android:layout_toStartOf="@+id/appointment_time"
            android:layout_toLeftOf="@+id/appointment_time"
            android:layout_toEndOf="@+id/appointment_image"
            android:layout_toRightOf="@+id/appointment_image"
            android:layout_marginStart="8dp"
            android:text="Doctor's Name"
            android:textSize="@dimen/text_view_bottom_left_item"
            android:layout_marginLeft="8dp" />


        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="64dp"
            android:layout_height="166dp"
            android:layout_alignTop="@+id/appointment_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/appointment_image"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:width="25dp"
            android:gravity="top"
            android:text="01:30 pm"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_view_top_left_item" />

       <ImageView
           android:id="@+id/appointment_image"
           android:background="@color/colorPaletteGreen"
           android:layout_width="90dp"
           android:layout_height="90dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>