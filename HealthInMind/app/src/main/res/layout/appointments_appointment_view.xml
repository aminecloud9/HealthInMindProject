<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="10dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="@color/cardview_light_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_doctor_appointment_item"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/appointment_image"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="141dp"
            android:layout_toRightOf="@+id/appointment_image"
            android:gravity="bottom"
            android:text="Doctor's name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_top_left_item" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_appointment_item"
            android:layout_below="@+id/tv_doctor_appointment_item"
            android:layout_alignLeft="@+id/tv_doctor_appointment_item"
            android:text="05/05/2020"
            android:layout_toRightOf="@+id/appointment_image"
            android:textSize="@dimen/text_view_bottom_left_item"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time_appointment_item"
            android:layout_toRightOf="@+id/tv_doctor_appointment_item"
            android:layout_alignTop="@+id/tv_doctor_appointment_item"
            android:text="10:05 am"
            android:gravity="right"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/text_view_top_right_item"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_addedBy_appointment_item"
            android:text="Added By Doctor"
            android:layout_toRightOf="@+id/tv_date_appointment_item"
            android:gravity="right"
            android:textSize="@dimen/text_view_bottom_right_item"
            android:layout_alignTop="@+id/tv_date_appointment_item"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_time_appointment_item"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/colorPaletteGreen"
            android:id="@+id/appointment_image"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>