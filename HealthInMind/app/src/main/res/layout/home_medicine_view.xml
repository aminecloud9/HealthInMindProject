<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="0dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_home_medicine_time"
            android:layout_width="284dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/image_home_medicine"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/image_home_medicine"
            android:layout_toRightOf="@+id/image_home_medicine"
            android:text="13:00 // 1:00 PM "
            android:gravity="bottom"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_view_top_left_item" />

        <TextView
            android:id="@+id/txt_home_medicine_name_dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_home_medicine_time"
            android:layout_alignBottom="@+id/image_home_medicine"
            android:layout_toStartOf="@+id/txt_home_medicine_quantity_to_take"
            android:layout_toLeftOf="@+id/txt_home_medicine_quantity_to_take"
            android:layout_toEndOf="@+id/image_home_medicine"
            android:layout_toRightOf="@+id/image_home_medicine"
            android:layout_marginStart="8dp"
            android:gravity="top"
            android:text="description of medicineRoomImpl"
            android:textSize="@dimen/text_view_bottom_left_item"
            android:layout_marginLeft="8dp" />


        <TextView
            android:id="@+id/txt_home_medicine_quantity_to_take"
            android:layout_width="64dp"
            android:layout_height="166dp"
            android:layout_alignTop="@+id/txt_home_medicine_name_dose"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/image_home_medicine"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:width="25dp"
            android:gravity="top"
            android:text="1 Tablet"
            android:textSize="@dimen/text_view_bottom_right_item" />

        <ImageView
            android:id="@+id/image_home_medicine"
            android:background="@color/colorPaletteGreen"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>